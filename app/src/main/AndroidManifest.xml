<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="book.yong.cn.book">

    <!-- 添加网络访问权限 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- 主activity -->
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <!-- 登陆activity -->
        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/AppTheme.NoBar" />
        <!-- 注册activity -->
        <activity
            android:name=".activity.RegisterActivity"
            android:theme="@style/AppTheme.NoBar" />
        <!-- 欢迎界面 -->
        <activity
            android:name=".activity.WelcomeActivity"
            android:theme="@style/AppTheme.NoBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ClassifyActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.BookDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.CatalogueActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.BookPageActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".activity.AuthorOtherBook"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.SearchActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.Disclaimer"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>