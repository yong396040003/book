<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/img"
        android:layout_width="88dp"
        android:layout_height="120dp">

        <ImageView
            android:id="@+id/bookshelf_Img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/bookshelf_click"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bookshelf_img_click" />

        <ImageView
            android:id="@+id/bookshelf_batch_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bookshelf_select_bg"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/bookshelf_batch_select"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/bookshelf_select_img"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:text="书名"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="14sp" />

</RelativeLayout>